{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
                }
            }
        },
        {
            "name": "profile",
            "cacheVariables": {
                "PBAT_ENABLE_PROFILER": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "PBAT_PROFILE_ON_DEMAND": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "x64",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "dev",
            "inherits": [
                "default",
                "profile"
            ],
            "cacheVariables": {
                "PBAT_BUILD_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "shared",
            "hidden": true,
            "cacheVariables": {
                "PBAT_BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "static",
            "hidden": true,
            "cacheVariables": {
                "PBAT_BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": "OFF"
                }
            }
        },
        {
            "name": "msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": {
                    "type": "STRING",
                    "value": "/EHsc /bigobj /MP /permissive- /W4 /WX /w44061 /w44062 /w34191 /w44242 /w44254 /w44263 /w14264 /w34265 /w44266 /w34287 /w44289 /w44296 /w44339 /w44355 /w44365 /w44388 /w44437 /w44471 /w44514 /w14545 /w14546 /w14547 /w14548 /w14549 /w14555 /w44582 /w44583 /w44596 /w44623 /w44625 /w34640 /w44643 /w34738 /w44774 /w44777 /w44800 /w14822 /w24826 /w14928 /w14946 /w44988 /w15022 /w15023 /w45024 /w45025 /wd4324"
                }
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": {
                    "type": "STRING",
                    "value": "-Werror -Wall -Wextra -Wshadow -Wnon-virtual-dtor -Wpedantic -Wold-style-cast -Wcast-align -Wunused -Woverloaded-virtual -Wconversion -Wsign-conversion -Wmisleading-indentation -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wnull-dereference -Wuseless-cast -Wdouble-promotion -Wformat=2 -Wimplicit-fallthrough -Wno-inline"
                }
            }
        },
        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": {
                    "type": "STRING",
                    "value": "-Werror -Wall -Wextra -Wshadow -Wnon-virtual-dtor -Wpedantic -Wold-style-cast -Wcast-align -Wunused -Woverloaded-virtual -Wconversion -Wsign-conversion -Wmisleading-indentation -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wnull-dereference -Wuseless-cast -Wdouble-promotion -Wformat=2 -Wimplicit-fallthrough -Wno-inline"
                }
            }
        },
        {
            "name": "suitesparse",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "suitesparse",
                "PBAT_USE_SUITESPARSE": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "mkl",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "mkl",
                "PBAT_USE_INTEL_MKL": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "python",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "python",
                "PBAT_BUILD_PYTHON_BINDINGS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "cuda",
            "hidden": true,
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "cuda",
                "PBAT_USE_CUDA": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "pic",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_POSITION_INDEPENDENT_CODE": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "pip",
            "inherits": [
                "default",
                "profile",
                "python",
                "pic"
            ]
        },
        {
            "name": "pip-shared",
            "inherits": [
                "default",
                "profile",
                "python",
                "shared",
                "pic"
            ]
        },
        {
            "name": "pip-cuda",
            "inherits": [
                "default",
                "profile",
                "pic"
            ],
            "cacheVariables": {
                "VCPKG_MANIFEST_FEATURES": "cuda;python",
                "PBAT_USE_CUDA": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "PBAT_BUILD_PYTHON_BINDINGS": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "local-pip-cuda",
            "inherits": [
                "pip-cuda"
            ],
            "cacheVariables": {
                "CMAKE_CUDA_ARCHITECTURES": "native"
            }
        },
        {
            "name": "ci-pip-cuda",
            "inherits": [
                "pip-cuda"
            ],
            "cacheVariables": {
                "CMAKE_CUDA_ARCHITECTURES": "70-virtual"
            }
        }
    ]
}